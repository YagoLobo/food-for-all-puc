@model FoodForAll.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login - Food For All";
}
<div class="auth-wrapper">
    <div class="auth-card">
        <h2 class="section-title" style="text-align:center; color:#2e8b57;">Entrar na Plataforma</h2>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }
        <form asp-controller="Auth" asp-action="Login" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe">Lembrar-me</label>
            </div>
            <button type="submit" class="btn primary" style="width:100%;">Entrar</button>
        </form>
        <div class="auth-links">
            <a href="/Auth/ForgotPassword">Esqueceu a senha?</a> |
            <a href="/Auth/Register">Cadastre-se</a>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 