@model FoodforAll.Models.EstabelecimentoReceptor

@{
    ViewBag.Title = "Cadastro de Cozinha";
    Layout = null;
}

<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="~/css/cadastro.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<main class="cadastro-main">
    <div class="container">
        <div class="auth-wrapper">
            <section class="auth-card">
                <h2 class="auth-title">Cadastro de Cozinha Solidária</h2>

                <form asp-action="Create" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    <div class="form-container">
                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-utensils"></i>
                                <input asp-for="Nome" class="form-control" />
                            </div>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegistroGoverno"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-id-card-alt"></i>
                                <input asp-for="RegistroGoverno" class="form-control" />
                            </div>
                            <span asp-validation-for="RegistroGoverno" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RefeicoesDiarias"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-hamburger"></i>
                                <input asp-for="RefeicoesDiarias" type="number" class="form-control" />
                            </div>
                            <span asp-validation-for="RefeicoesDiarias" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Aprovada">Aprovada no Programa do Governo</label>
                            <div class="input-with-icon">
                                <i class="fas fa-check-circle"></i>
                                <input asp-for="Aprovada" type="checkbox" />
                            </div>
                            <span asp-validation-for="Aprovada" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Email" type="email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Telefone"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-phone"></i>
                                <input asp-for="Telefone" class="form-control" />
                            </div>
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Endereco"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-map-marker-alt"></i>
                                <input asp-for="Endereco" class="form-control" />
                            </div>
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Senha"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Senha" type="password" class="form-control" />
                            </div>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <button type="submit" class="auth-submit">Cadastrar</button>
                        <a asp-controller="Cadastro" asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}