@{
    ViewBag.Title = "Escolher Tipo de Login";
    Layout = null;
}

<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<main class="login-main">
    <div class="container">
        <div class="auth-wrapper">
            <section class="auth-card">
                <h2 class="auth-title">Como deseja acessar?</h2>
                <p class="auth-subtitle">Selecione seu tipo de usuário</p>

                <div class="user-type-grid">
                    <div class="user-type-card">
                        <div class="type-icon">
                            <i class="fas fa-store fa-3x"></i>
                        </div>
                        <h3>Supermercado</h3>
                        <p class="type-description">Doe alimentos e gerencie suas doações</p>
                        <form asp-action="Login" asp-controller="Auth" method="get">
                            <input type="hidden" name="tipo" value="Doador" />
                            <button class="btn type-btn" type="submit">Acessar como Estabelecimento</button>
                        </form>
                    </div>

                    <div class="user-type-card">
                        <div class="type-icon">
                            <i class="fas fa-utensils fa-3x"></i>
                        </div>
                        <h3>Cozinha Solidária</h3>
                        <p class="type-description">Encontre e receba doações de alimentos</p>
                        <form asp-action="Login" asp-controller="Auth" method="get">
                            <input type="hidden" name="tipo" value="Receptor" />
                            <button class="btn type-btn" type="submit">Acessar como Cozinha</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>