@model FoodforAll.Models.EstabelecimentoDoador

@{
    ViewBag.Title = "Cadastro de Estabelecimento";
    Layout = null;
}

<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="~/css/cadastro.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<main class="cadastro-main">
    <div class="container">
        <div class="auth-wrapper">
            <section class="auth-card">
                <h2 class="auth-title">Cadastro de Supermercado</h2>

                <form asp-action="Create" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    <div class="form-container">
                        <div class="form-group">
                            <label asp-for="NomeFantasia"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-store-alt"></i>
                                <input asp-for="NomeFantasia" class="form-control" />
                            </div>
                            <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CNPJ"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-id-card"></i>
                                <input asp-for="CNPJ" class="form-control" />
                            </div>
                            <span asp-validation-for="CNPJ" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Categoria"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-list"></i>
                                <input asp-for="Categoria" class="form-control" />
                            </div>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Email" type="email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Telefone"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-phone"></i>
                                <input asp-for="Telefone" class="form-control" />
                            </div>
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Endereco"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-map-marker-alt"></i>
                                <input asp-for="Endereco" class="form-control" />
                            </div>
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Senha"></label>
                            <div class="input-with-icon">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Senha" type="password" class="form-control" />
                            </div>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <button type="submit" class="auth-submit">Cadastrar</button>
                        <a asp-controller="Cadastro" asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}